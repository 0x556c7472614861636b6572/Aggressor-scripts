# Provides a menu to show notification when specified beacon checks in
# Und3rf10w

# Adds a menu that posts a message to the log when the beacon next checks in
popup beacon_bottom{
	menu "Notify"{
		item "Next check-in"{
			local('$bid');
			foreach $bid ($1){
				binput($bid, "checkin");
				bcheckin($bid);
				on beacon_checkin{
					elog("Beacon: $bid checked in at $3 as requested");
				}
			}
		}
	}
}